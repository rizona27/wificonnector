/* pages/about/about.wxss */
.page-container {
    min-height: 100vh;
    width: 100vw; /* 确保占据整个视口宽度 */
    position: relative;
    overflow: hidden;
    margin: 0; /* 移除任何默认的外部边距 */
    padding: 0; /* 移除任何默认的内部边距 */
}

.background-image {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

/* 自定义导航栏样式 */
.custom-nav-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
}

.nav-bar-title {
    position: absolute;
    left: 0;
    right: 0;
    height: 32px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 16px;
    font-weight: bold;
    color: #fff;
}

/* 内容包裹容器，用于向下推开内容 */
.content-wrapper {
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 150px; 
}

.text-container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

.moving-gradient {
    background-size: 800% 800%;
    animation: gradientFlow 20s ease-in-out infinite;
}

@keyframes gradientFlow {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.text-line {
    margin-bottom: 11px;
    font-style: italic;
    font-size: 14px;
}

.logo-image {
    width: 15px;
    height: 15px;
    margin-top: 5px;
}

/* 关键修正：将time-container改为flex布局 */
.time-container {
    position: fixed;
    bottom: 10px;
    left: 0;
    right: 0;
    text-align: center;
    /* 新增布局 */
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 调整字体大小，使之更清晰 */
.time-text {
    font-size: 16px; 
    font-weight: 100;
    font-style: italic;
    color: #D8DBE0;
}

.time-text-effect {
    animation: timeFade 3s ease-in-out infinite;
}

@keyframes timeFade {
  0% { opacity: 0.8; }
  50% { opacity: 0.4; }
  100% { opacity: 0.8; }
}