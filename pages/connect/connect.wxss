/* pages/connect/connect.wxss */

/* 设定页面的根view容器样式 */
.page-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-size: cover;
    background-position: center;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    padding: 50px 20px;
    box-sizing: border-box;
}

/* 设定按钮和文本容器的样式 */
.button-and-text-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

/* 共同的UI元素样式，设置固定宽高 */
.ui-element {
    width: 250px; /* 固定宽度，可以根据你的喜好调整 */
    height: 50px; /* 固定高度，可以根据你的喜好调整 */
    margin-bottom: 15px;
    border-radius: 25px;
    background-color: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
}

/* 按钮的特定样式，继承自 .ui-element */
button {
    color: #fff;
    font-style: italic;
    font-weight: 600;
    /* 强制移除按钮的默认边框和内边距，确保和view样式一致 */
    border: none;
    padding: 0;
    /* 继承并覆盖 .ui-element 的部分样式，防止默认样式影响 */
    height: 100%;
    width: 100%;
    line-height: 50px; /* 确保文字在垂直方向上居中 */
    background-color: transparent; /* 确保按钮背景透明 */
}

/* 按钮点击或按压时的样式 */
button:active {
    transform: scale(0.98);
    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.08);
}

/* 用于文本截断的样式 */
.ssid-text-wrapper {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding: 0 15px; /* 添加左右内边距，确保文字不紧贴边缘 */
  box-sizing: border-box;
  width: 100%; /* 宽度占满父容器 */
  text-align: center;
}

/* 添加背景图片样式 */
.background-image {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

/* 新增：自定义导航栏样式 */
.custom-nav-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
}

.nav-bar-title {
    position: absolute;
    left: 0;
    right: 0;
    height: 32px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 16px;
    font-weight: bold;
    color: #000; /* 标题颜色为深色，以搭配浅色背景 */
}

/* 新增：内容包裹容器，用于向下推开内容 */
.content-wrapper {
    width: 100%;
    height: 100%; /* 确保它能占据整个空间 */
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end; /* 底部对齐，以保留原有布局 */
    padding: 50px 20px; /* 恢复你原来的内边距 */
}

/* 新增：正在连接状态的按钮样式 */
.connecting {
  background-color: rgba(255, 255, 255, 0.4);
  color: #fff;
  font-weight: bold;
}

/* 新增：加载动画的点点样式 */
.loading-dot {
  opacity: 0;
  animation: dot-breathe 1.4s infinite;
  display: inline-block;
  font-size: 24px;
  line-height: 1;
}

.loading-dot:nth-child(1) {
  animation-delay: 0s;
}

.loading-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.loading-dot:nth-child(3) {
  animation-delay: 0.4s;
}

/* 新增：点点呼吸动画 */
@keyframes dot-breathe {
  0% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}