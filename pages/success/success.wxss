/* pages/success/success.wxss */
.page-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-size: cover;
    background-position: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  
  /* 关键修改：添加背景图片样式 */
  .background-image {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }
  
  .success-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 16px;
    font-weight: bold;
  }
  
  /* 新增：自定义成功图标样式 */
  .success-icon {
    width: 60px; /* 调整图片宽度 */
    height: auto; /* 高度自适应 */
  }
  
  .success-content text {
    margin-top: 20px; /* 调整文字与图标的间距 */
  }